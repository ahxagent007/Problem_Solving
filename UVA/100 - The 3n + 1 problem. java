import java.util.Scanner;

public class UVA {

    public static void main(String[] args) {
        // TODO code application logic here
        
        Scanner kb = new Scanner(System.in);
        
        while(true){
            int i = kb.nextInt();
            int j = kb.nextInt();
                        
            ThreeNPlusProblem(i,j);
        }
    }
    
    
    private static void ThreeNPlusProblem(int i, int j){
    
        //basic Solve
        int max = 1;
        
        for(int n=i; n<=j; n++){
            int this_max = 1;
            int m = n;
            while(m != 1){
                if(m%2 == 0){
                    m = m/2;
                }else{
                    m = 3*m + 1;
                }
                
                this_max++;
            }
            
            if(this_max > max){
                max = this_max;
            }
        }
        
        System.out.println(i +" "+ j+ " "+ max);
    }
}
